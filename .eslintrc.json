{
    "env": {
        "browser": true,
        "es2021": true
    },
    "ignorePatterns": ["tests/samples/","samples/"],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": "off",
        "no-tabs": "off",
        "indent": ["error","tab"],
        "padded-blocks": "off",
        "space-before-function-paren": "off",
        "no-use-before-define": "off",
        "@typescript-eslint/no-use-before-define": ["error","nofunc"],
        "no-debugger": "warn",
        "comma-dangle": "off"
    }
}
