{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"declaration": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": true
	},
	"include": [ "src" ],
	"exclude": [ "samples" ],
}